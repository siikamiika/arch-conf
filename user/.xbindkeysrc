### audio
"pamixer --increase 2"
    XF86AudioRaiseVolume
"pamixer --decrease 2"
    XF86AudioLowerVolume
"pamixer -t"
    XF86AudioMute
# alternative, when no keys available
"pamixer --increase 2"
    Control+Alt + Right
"pamixer --decrease 2"
    Control+Alt + Left
"pamixer -t"
    Control+Alt + KP_Insert

### backlight
"xbacklight -inc 5"
    XF86MonBrightnessUp
"xbacklight -dec 5"
    XF86MonBrightnessDown
# alternative, when no keys available
"xbacklight -inc 5"
    Control+Alt + Up
"xbacklight -dec 5"
    Control+Alt + Down

### translate
# anything to english
"gt_notify -tTo auto en"
    Alt+Mod4 + a
# english to finnish, with tts
"tl-soundnotify en en fi"
    Alt+Mod4 + e
# japanese to english, with tts
"tl-soundnotify ja ja en"
    Alt+Mod4 + j
# kanji
"~/koodi/language-learning/japanese/scripts/kanjinotify"
    Shift+Alt+Mod4 + j
"kanjidamage"
    Shift+Alt+Mod4 + k
# russian to english, with tts
"tl-soundnotify ru ru en"
    Alt+Mod4 + r

### screenshot
"screenshot-area"
    Control+Shift + 4

### touchpad & mouse
"touchpadtoggle"
    Control + Escape
"xte 'mouseclick 6'"
    Shift + b:4
"xte 'mouseclick 7'"
    Shift + b:5

### compton
"compton-toggle"
    Alt+Mod4 + F12

### alternate arrow keys and such
"xvkbd -xsendevent -text '\[Up]'"
    Alt + k
"xvkbd -xsendevent -text '\[Down]'"
    Alt + j
"xvkbd -xsendevent -text '\[Left]'"
    Alt + h
"xvkbd -xsendevent -text '\[Right]'"
    Alt + l
"xvkbd -xsendevent -text '\[Page_Up]'"
    Shift+Alt + i
"xvkbd -xsendevent -text '\[Page_Down]'"
    Shift+Alt + k
"xvkbd -xsendevent -text '\[Home]'"
    Shift+Alt + u
"xvkbd -xsendevent -text '\[End]'"
    Shift+Alt + j
