    key <LSGT> { [ adiaeresis, Adiaeresis, odiaeresis, Odiaeresis ] };
    key <AB01> {
        type = "EIGHT_LEVEL_SEMIALPHABETIC",
        Symbols[Group1] = [ z, Z, 0, 0, 0, 0, 0, 0 ]
    };
    key <AB02> {
        type = "EIGHT_LEVEL_SEMIALPHABETIC",
        Symbols[Group1] = [ x, X, 1, 1, 1, 1, 1, 1 ]
