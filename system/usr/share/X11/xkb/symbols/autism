    key <AC04> {
        type = "EIGHT_LEVEL_SEMIALPHABETIC",
        Symbols[Group1] = [ f, F, 6, 6, 6, 6, 6, 6 ]
    };
    key <AC05> {
        type = "EIGHT_LEVEL_SEMIALPHABETIC",
        Symbols[Group1] = [ g, G, plus, plus, plus, plus, plus, plus ]
    };
    key <AC06> {
        type = "EIGHT_LEVEL_SEMIALPHABETIC",
        Symbols[Group1] = [ h, H, Left, Left, Left, Left, Left, Left ]
    };
    key <AC07> {
        type = "EIGHT_LEVEL_SEMIALPHABETIC",
        Symbols[Group1] = [ j, J, Down, Down, Down, Down, Down, Down ]
    };
    key <AC08> {
        type = "EIGHT_LEVEL_SEMIALPHABETIC",
