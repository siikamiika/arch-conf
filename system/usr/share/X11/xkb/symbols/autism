        Symbols[Group1] = [ e, E, 8, 8, 8, 8, 8, 8 ]
    };
    key <AD04> {
        type = "EIGHT_LEVEL_SEMIALPHABETIC",
        Symbols[Group1] = [ r, R, 9, 9, 9, 9, 9, 9 ]
    };
    key <AD05> {
        type = "EIGHT_LEVEL_SEMIALPHABETIC",
        Symbols[Group1] = [ t, T, minus, minus, minus, minus, minus, minus ]
    };
    key <AD06> { [ y, Y, udiaeresis, Udiaeresis ] };
    key <AD07> {
        type = "EIGHT_LEVEL_SEMIALPHABETIC",
        Symbols[Group1] = [ u, U, Delete, Delete, Delete, Delete, Delete, Delete ]
    };
    key <AD08> {
        type = "EIGHT_LEVEL_SEMIALPHABETIC",
        Symbols[Group1] = [ i, I, Insert, Insert, Insert, Insert, Insert, Insert ]
    };
    key <AD09> { [ o, O, odiaeresis, Odiaeresis ] };
    key <AD10> {
        type = "EIGHT_LEVEL_SEMIALPHABETIC",
        Symbols[Group1] = [ p, P, Home, Home, Home, Home, Home, Home ]
    };
    key <AD11> {
        type = "EIGHT_LEVEL",
        Symbols[Group1] = [ bracketleft, braceleft, Prior, Prior, Prior, Prior, Prior, Prior ]
    };
    key <AD12> { [ bracketright, braceright, dead_acute, dead_diaeresis ] };
    key <BKSL> { [ backslash, bar, notsign, brokenbar ] };

    // second letter row
    key <AC01> { [ a, A, adiaeresis, Adiaeresis ] };
    key <AC02> {
        type = "EIGHT_LEVEL_SEMIALPHABETIC",
        Symbols[Group1] = [ s, S, 4, section, 4, 4, 4, 4 ]
    };
    key <AC03> {
        type = "EIGHT_LEVEL_SEMIALPHABETIC",
        Symbols[Group1] = [ d, D, 5, ETH, 5, 5, 5, 5 ]
