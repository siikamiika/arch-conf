#!/usr/bin/env python3

# Concatenate a directory (of images) into index.html and open it in your browser.

import os
import webbrowser
import html
from sys import argv
from pathlib import Path

def main():
    page = [
        '<!DOCTYPE html>',
        '<head>',
            '<meta charset="utf-8">',
            '<style type="text/css">',
                'body {',
                    'background-color: black;',
                    'text-align: center;',
                '}',
                'a {',
                    'color: #237A72;',
                '}',
            '</style>',
        '</head>',
        '<body>',
        '<!-- Content -->',
    ]

    path = argv[1] if argv[1:] else '.'
    position = None
    if os.path.isfile(path):
        path, position = os.path.split(path)

    files = sorted(os.listdir(path))
    for f in files:
        f = html.escape(f, quote=True)
        page.append('<p><a href="#{0}">{0}</a></p>'.format(f))
        page.append('<img src="{0}" alt="{0}" id="{0}">'.format(f))

    page += [
        '<!-- End content -->',
        '</body>',
    ]

    page = '\n'.join(page)

    index = os.path.join(path, 'index.html')

    with open(index, 'w', encoding='utf-8') as f:
        f.write(page)

    uri = Path(index).resolve().as_uri()
    if position:
        uri += '#' + position
    webbrowser.open_new_tab(uri)


if __name__ == '__main__':
    main()
